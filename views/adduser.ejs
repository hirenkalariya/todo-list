<%- include('.././partials/hedar.ejs')%>

<div class="container">
    <% if (alert) { %>
      
        <div class="alert alert-primary" role="alert">
            <h2><%= alert %></h2>
        </div>
      <% } else{ %>
        <br>
<%}%>      
   

    <form action="/adduser" onsubmit="return validateForm()" method="post">
        <div class="mb-3">
            <label for="exampleInputUser" class="form-label">User Name</label>
            <input type="text" class="form-control" id="exampleInputUser" name="name">

        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
            <label for="exampleInputNumber" class="form-label">Mobil Number</label>
            <input type="number" class="form-control" id="exampleInputNumber" name="mobile">
            <div id="emailHelp" class="form-text">We'll never share your Mobile Number with anyone else.</div>
        </div>

        <div class="mb-3">
            <label for="exampleInputSelect" class="form-label">Are You Student ?</label>
            <select class="form-select" id="exampleInputSelect" aria-label="Default select example"
                name="aryyoustudent">

                <option value="yes">yes</option>
                <option value="no">no</option>
            </select>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


