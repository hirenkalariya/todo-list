<%- include('.././partials/hedar.ejs')%>

<div class="container">
   
    <form action="/edit/<%=user.id%>" onsubmit="return validateForm()" method="post">
        <div class="mb-3">
            <label for="exampleInputUser" class="form-label">User Name</label>
            <input type="text" class="form-control" id="exampleInputUser" name="name" value="<%=user.name%>">

        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%=user.email%>">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
            <label for="exampleInputNumber" class="form-label">Mobil Number</label>
            <input type="number" class="form-control" id="exampleInputNumber" name="mobile" value="<%=user.mobile%>">
            <div id="emailHelp" class="form-text">We'll never share your Mobile Number with anyone else.</div>
        </div>

        <div class="mb-3">
            <label for="exampleInputSelect" class="form-label">Are You Student ?</label>
            <select class="form-select" id="exampleInputSelect" name="aryyoustudent">

                <option value="yes" <%= user.aryyoustudent == 'yes' ? 'selected' : ''%>> yes</option>
                <option value="no" <%= user.aryyoustudent == 'no' ? 'selected' : ''%>>no</option>
              
               
            </select>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


</div>


